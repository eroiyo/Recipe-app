<%= render partial: "shared/header" %>
<div class="container">
<h1 class="inventory-title">Shopping List</h1>
<div class="shopping-messages">
</div>
 <div class="separation-bar">
  <% if(@inventory.inventory_foods.length > 0) %>
  <table>
  <thead>
    <tr>
      <th>Food</th>
      <th>Quantity Name</th>
      <th>Price</th>
    </tr>
  </thead>
  <tbody>
<% @result.each do |element| %>
  <%= render partial: "inventories/inventory_food", object: element %>
<% end %>
  </tbody>
</table>
<% end %>

</div>

